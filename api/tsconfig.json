{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": [
    "shared/**/*.ts",
    "ping/**/*.ts",
    "seed/**/*.ts",
    "companies/**/*.ts",
    "contacts/**/*.ts",
    "cases/**/*.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
